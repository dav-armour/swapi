<div class="container">
  <div class="d-flex justify-content-center mt-5 mb-3">
    <h1>Star Wars Films</h1>
  </div>
  <div class="mb-2">
    <input type="text" name="search" id="searchInput" placeholder="Search title...">
  </div>
  <table class="table table-striped" id="filmTable">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Episode #</th>
        <th scope="col">Release Year</th>
        <th scope="col">Favourite</th>
      </tr>
    </thead>

    <tbody>
      <% @films.each do |film| %>
        <tr data-episode_id="<%= film['episode_id'] %>">
          <td class="align-middle"><%= film['title'] %></td>
          <td class="align-middle"><%= film['episode_id'] %></td>
          <td class="align-middle"><%= film['release_date'][0,4] %></td>
          <td class="align-middle fav-cell">No</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>